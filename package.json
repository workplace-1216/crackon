{
  "name": "imaginecalendar",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "test": "turbo test --parallel",
    "dev:user": "turbo dev --filter=@imaginecalendar/user-portal",
    "dev:admin": "turbo dev --filter=@imaginecalendar/admin-portal",
    "dev:api": "turbo dev --filter=@imaginecalendar/api",
    "dev:webhook": "turbo dev --filter=@imaginecalendar/webhook-service",
    "dev:trigger": "turbo dev --filter=@imaginecalendar/trigger-worker",
    "build:user": "turbo build --filter=@imaginecalendar/user-portal",
    "build:admin": "turbo build --filter=@imaginecalendar/admin-portal",
    "build:api": "turbo build --filter=@imaginecalendar/api",
    "db:generate": "turbo db:generate --filter=@imaginecalendar/database",
    "db:migrate": "turbo db:migrate --filter=@imaginecalendar/database",
    "db:migrate:prod": "turbo db:migrate:prod --filter=@imaginecalendar/database",
    "db:seed": "turbo db:seed --filter=@imaginecalendar/database",
    "db:reset": "turbo db:reset --filter=@imaginecalendar/database",
    "format": "biome format --write .",
    "lint": "turbo lint && manypkg check",
    "typecheck": "turbo typecheck",
    "audit:deps": "bash scripts/audit-dependencies.sh"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.4",
    "@manypkg/cli": "^0.24.0",
    "turbo": "2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.2.21"
}